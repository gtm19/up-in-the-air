<section id="trips" class="mt-3">
  <div class="album py-2">
    <div class="container-sm">
      <div class="row row-cols-4 g-3 pb-4">
        <% @trips.each do |trip| %>
          <div class="col mb-4">
            <div class="card shadow-sm">
              <!-- <div class="tripcardimage"> -->
              <div>
                <% if !trip.city_id.nil? && trip.city.photo.attached? %>
                  <%= cl_image_tag trip.city.photo.key, class: "tripcardimage" %>
                <% elsif !ParticipantScore.joins(:trip_participant).where('trip_participants.trip_id = "#{trip.id}"').empty? %>
                  <%= image_tag "https://res.cloudinary.com/dr4pzn94d/image/upload/v1615012711/p9_square_c8bptu.jpg", alt: "alttext", class: "tripcardimage" %>
                <% else %>
                  <%= image_tag "https://res.cloudinary.com/dr4pzn94d/image/upload/v1615012739/p2_london_yk2ew1.jpg", alt: "alttext", class: "tripcardimage" %>
                <% end %>
              <!-- <image src='https://images.unsplash.com/photo-1534534573898-db5148bc8b0c?ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=675&q=80'> -->
              <!-- <svg class="bd-placeholder-img card-img-top" width="100%" height="225" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: Thumbnail" preserveAspectRatio="xMidYMid slice" focusable="false"><title>Placeholder</title><rect width="100%" height="100%" fill="#55595c"/></svg> -->
              </div>
              <div class="card-body">
              <%= link_to trip.name, trip_path(trip), class: "card-text" %>
                <div class="d-flex justify-content-between align-items-center">
                </div>
              </div>
            </div>
          </div>
          <% end %>
          <!-- Plus symbol -->
          <div class="col text-center plus-box mb-4 card shadow-sm">
            <%= link_to new_trip_path do %>
              <i class="fas fa-plus fa-7x plus hvr-grow"></i>
            <% end %>
      </div>
    </div>
  </div>
</section>

