<div class ="container"> 
  <h2 class= "text-center mt-5">Keep planning that next adventure...</h2>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div>
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password" } %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>
    <div class= "text-center mb-3">
      <div class="btn btn-primary">
        <%= f.button :submit, "Login", class: "btn btn-primary" %>
      </div>
    </div>
    <div class= "text-center">
      <%= render "devise/shared/links" %>
    </div>
  <% end %>
  
</div>

<div class= "text-center fixed-bottom">
  <%= image_tag("login.png", size: "741x317", :alt => "Person popping their head out from the bushes!") %>
</div>

<%= render 'shared/footer-small' %>